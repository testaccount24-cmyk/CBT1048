    OPT=2,        DEFAULT     SYSTEM,JOB AND STEP DATA COLLECTION
    DSV=3,        CHOSEN      DATASET AND DASD VOLUME RECORDING
    REC=0,        DEFAULT     TYPE 17 (SCRATCH) FOR PERMANENT DATASETS
    EXT=YES,      DEFAULT     USER EXITS ARE TO BE TAKEN
    JWT=30,       CHOSEN      MAXIMUM CONTINUOUS WAIT TIME IS 30 MINS
    BUF=8192,     CHOSEN      A 8192 BYTE BUFFER IS DEFINED
    SID=IPO1,     CHOSEN      SYSTEM ID
    OPI=NO,       DEFAULT     PERMIT OPERATOR INTERVENTION
    MAN=ALL       DEFAULT     USER AND SYSTEM RECORDS PERMITTED
