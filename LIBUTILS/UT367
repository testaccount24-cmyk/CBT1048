AND      START 0             DEFINE
         ENTRY OR            ENTRY
         ENTRY XOR           POINTS
         USING *,15
         MVI   INSTR,X'14'   REPLACE OP CODE OF INSTR WITH AND CODE
         B     SAVE
         USING *,15
OR       MVI   INSTR,X'16'   REPLACE OP CODE OF INSTR WITH OR CODE
         B     SAVE
         USING *,15
XOR      MVI   INSTR,X'17'   REPLACE OP CODE OF INSTR WITH XOR CODE
SAVE     STM   14,12,12(13)  SAVE REGISTERS
         LM    3,5,0(1)      FETCH PARAMETER ADDRESSES
         L     3,0(3)        FETCH FIRST PARAMETER
         L     4,0(4)        FETCH SECOND PARAMETER
INSTR    NR    3,4           EXECUTE AND,OR,XOR INSTRUCTION
         ST    3,0(5)        RETURN RESULTS
         LM    14,12,12(13)  RESTORE REGISTERS
         MVI   12(13),X'FF'  SET RETURN INDICATION
         BR    14            RETURN TO CALLING PROGRAM
         END
